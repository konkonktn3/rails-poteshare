<h1>登録ルーム一覧</h1>


<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>値段（１泊）</th>
      <th>ルーム詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= image_tag post.image.to_s, size: '300x200' %></td>
      <td><%= post.roomname %></td>
      <td><%= post.price %>円</td>
      <td><%= link_to "more..", post %></td>
      <td><%= link_to "編集", [:edit, post] %></td>
      <td><%= button_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

