<div class="main-box">
  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <div class="post-index-container">
    <h1>登録ルーム一覧</h1>
    <table class="yoko">
      <thead>
        <tr>
          <th class="room-img">ルーム画像</th>
          <th class="roomname">ルーム名</th>
          <th class="price">値段<br>（１泊）</th>
          <th class="introduce">ルーム詳細</th>
          <th class="edit">編集</th>
          <!-- <th>削除</th> -->
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.image.to_s, size: '220x150' %></td>
            <td><%= post.roomname %></td>
            <td><%= post.price %>円</td>
            <td><%= link_to "more..", post %></td>
            <td><%= link_to "編集", [:edit, post] %></td>
            <!-- <td><%#= button_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" } %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
