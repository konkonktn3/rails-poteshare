<h1>予約フォーム</h1>

<nav class="reservation-nav">
	<li class="other">1. 入力</li>
	<li>→</li>
	<li class="current">2. 確認</li>
	<li>→</li>
	<li class="other">3. 完了</li>
</nav>

<table>
  <tr>
    <th>ルーム名</th>
    <td><%= @reservation.post.roomname %></td>
  </tr>
  <tr>
    <th>ルーム画像</th>
    <td><%= @reservation.post.image_url, width: 100×200 %></td>
  </tr>
  <tr>
    <th>チェックイン</th>
    <td><%= @reservation.start_date %></td>
  </tr>
  <tr>
    <th>チェックアウト</th>
    <td><%= @reservation.finish_date %></td>
  </tr>
  <tr>
    <th>人数</th>
    <td><%= @reservation.ppl %>人</td>
  </tr>
</table>

# 戻った時も入力が残るように
<%= form_with model: @reservation, method: :post, url: post_reservations_back_path do |form| %>
	<%= form.hidden_field :start_date %>
	<%= form.hidden_field :finish_date %>
	<%= form.hidden_field :ppl %>
  <div>
    <ul>
      <%= form.submit '入力画面に戻る' %>
    </ul>
  </div>
<% end %>

<%= form_with model: @reservation, method: :post, url: "/posts/#{@post.id}/resevations" do |form| %>
	<%= form.hidden_field :start_date %>
	<%= form.hidden_field :finish_date %>
	<%= form.hidden_field :ppl %>
  <div>
    <ul>
      <%= form.submit '予約を確定する' %>
    </ul>
  </div>
<% end %>
  