<h1>予約一覧</h1>

<table>
  <thead>
    <tr>
    　<th>ルーム画像</th>
      <th>ルーム名</th>
      <th>合計料金</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.image %></td>
        <td><%= post.roomname %></td>
        <td><%= reservation.price %></td>
    <% end %>
  </tbody>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.start_date %></td>
        <td><%= reservation.finish_date %></td>
        <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to "ホームに戻る", '/top' %></p>
