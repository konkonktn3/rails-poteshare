<h1>予約一覧</h1>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
    　<th>ルーム画像</th>
      <th>ルーム名</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日</th>
      <th>詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <td><%= post.roomname %></td>
      <td><%= image_tag post.image.to_s, width: 180 %></td>
    <% end %>
    <% @reservations.each do |reservation| %>
      <%= reservation.post_roomname %>
        <td><%= reservation.start_date %></td>
        <td><%= reservation.finish_date %></td>
        <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "more..", reservation %></td>
    <% end %>
  </tbody>
</table>
<p><%= link_to "ホームに戻る", '/top' %></p>
