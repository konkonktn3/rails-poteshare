<h1>アカウント編集</h1>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user do |f| %>
  <table>
    <div>
      <% if @user.image? %>
        <%= image_tag @user.image.thumb.url, size: '150x150' %>
      <% else %>
        <%= image_tag "/assets/initialimage.jpg", size: '150x150' %>
      <% end %>
    </div>
    <tr>
      <th><%= f.label :image ,"プロフィール画像" %></th>
      <td><%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %></td>
    </tr>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :email ,"メールアドレス" %></th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th><%= f.label :password ,"新しいパスワード" %></th>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <th><%= f.label :password_confirmation, "新しいパスワード（確認）" %></th>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <th><%= f.label :password ,"現在のパスワード" %></th>
      <td><%= f.password_field :password %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "更新する" %></li>
      <li><%= link_to "戻る", "/users/#{@user.id}" %></li>
    </ul>
  </div>
<% end %>