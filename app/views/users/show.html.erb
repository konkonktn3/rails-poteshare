<h1>アカウント詳細</h1>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <div>
    <% if @user.image? %>
      <%= image_tag @user.image.thumb.url, size: '150x150' %>
    <% else %>
      <%= image_tag "/assets/initialimage.jpg", size: '150x150' %>
    <% end %>
  </div>
  <tr>
    <th>名前</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "編集", "/users/#{@user.id}/edit" %></li>
  </ul>
</div>


