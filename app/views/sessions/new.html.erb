
  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

<div class="login-container">
  <h2>ログイン</h2>
  <p>登録情報を入力してください。</p>

  <%= form_with scope: :session, url: login_path, local: true do |f| %>
    <div class="box">
      <tr>
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.email_field :email %>
      </tr><br>
      <tr>
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password %>
      </tr>
      <div class="button">
        <%= f.submit "ログイン" %><br>
        <%= link_to "アカウントをお持ちでない方", '/users/new' %>
      </div>
    </div>
  <% end %>
</div>
